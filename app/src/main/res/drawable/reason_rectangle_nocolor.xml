<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item android:drawable="@android:color/transparent" />

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="0.5dp"
                android:color="@color/mainColor"
            />
            <corners
                android:radius="20dp"
                />
        </shape>
    </item>
</layer-list>